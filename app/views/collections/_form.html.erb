<div class='frosted_glass_body_short'>
<%if @collection.errors.any? %>
  <%@collection.errors.full_messages.each do |message|%>
    <%=message%><br>
  <%end%>
<%end%>

<%= form_for collection do |f|%>
<p><%=f.text_field :name, placeholder: 'Name' %><br></p>
<p><%=f.text_area :description, placeholder: 'Description' %><br></p>
<p><%=f.label :privacy, "Is this collection private?"%>
<%= f.check_box :privacy %> </p>
<%=f.submit class: 'button' %>
<%end%>
</div>