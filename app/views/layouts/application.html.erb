<!DOCTYPE html>
<html>
<head>
  <title>Diorama</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='container'>
    <div id='user_header' align="right">
    <%= link_to "Home", root_path %> |
    <%= link_to "About", about_path %> |
    <% if current_user %> 
      Logged in as: <%= current_user.user_name %> |
      <%= link_to "Logout", session_path("current"), method: "delete" %>
    <% end %>

      <% if flash[:notice] %>
      <div class='notice' align="left">
        <%= flash[:notice] %>
      </div>
    <% end %>
      </div>


    </div>


<%= yield %>

  <%= link_to "Back", :back %>
</body>
</html>
