<!DOCTYPE html>
<html>
<head>
  <title>Diorama</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='container'>
    <div id='user_header' align="right">
  
    <% if current_user %>
      Logged in as: <%= current_user.user_name.capitalize %> |
      <%= link_to "My Collections", collections_path %> |
      <%= link_to "Logout", session_path("current"), method: "delete" %>
      <div id='search_box' align="left">
      Search for Tweets by: <%= form_tag '/tweets/search' %><%= search_field_tag :user_name %>
      </div>
    <% else %>
      <%= link_to 'Log In', login_path %> |
      <%= link_to 'Sign Up', signup_path %>
    <% end %>

      <% if flash[:notice] %>
      <div class='notice' align="left">
        <%= flash[:notice] %>
      </div>
    <% end %>
      </div>


    </div>


<%= yield %>

</body>
</html>
