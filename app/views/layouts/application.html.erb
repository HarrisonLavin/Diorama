<!DOCTYPE html>
<html>
<head>
  <title>Diorama</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='container'>
    <div id='user_header'>
    
    <% if flash[:notice] %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if current_user %>
      Logged in as: <%= current_user.user_name.capitalize %> |
      <%= link_to "Logout", session_path("current"), method: "delete" %>
    <% else %>
      <%= link_to 'Log In', login_path %> |
      <%= link_to 'Sign Up', signup_path %>
    <% end %>
      </div>
    </div>
<%= yield %>

</body>
</html>
