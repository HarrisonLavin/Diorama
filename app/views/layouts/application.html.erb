<!DOCTYPE html>
<html>
<head>
  <title>Diorama</title>
  <link rel="stylesheet" type="text/css" href="../../assets/stylesheets/stylesheet.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navbar_container'>
    <div class='navbar'>
    <span class='navbar_item'><%= link_to "My Collections", root_path %></span>
    <span class='navbar_item'><%= link_to "About", about_path %></span>
    <% if current_user %> 
      <span class='navbar_item'>
      Logged in as: <%= current_user.user_name %>
      </span>
      <span class='navbar_item'>
      <%= link_to "Logout", session_path("current"), method: "delete" %>
      </span>
    <% end %>
    <% if current_user.nil? %>
      Log in with Twitter: <%= link_to "Login", '/auth/twitter' %>
    <% end %>

      <% if flash[:notice] %>
      <div class='notice' align="left">
        <%= flash[:notice] %>
      </div>
    <% end %>
      </div>


    </div>

<div style='background: url(<%= asset_path "background#{rand(1..3)}.jpg" %>) no-repeat center center fixed' class='container'>
<%= yield %>
  <%= link_to "Back", :back %>
</div>
</body>
</html>
